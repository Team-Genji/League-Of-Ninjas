extends ../../node_modules/pug-bootstrap/_bootstrap
block body
	.container
		// Static navbar
		nav.navbar.navbar-default
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/home') League of Ninjas
				#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav
						li
							a(href='/forums') Forums
						li
							a(href='/summonersearch') Summoner Info
						li
							a(href='/gamesearch') Game Info
						if user
							li
								a(href='/chat') Online Chat		
						
					ul.nav.navbar-nav.navbar-right
						li.dropdown
							if user
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false', )
									| #{user.username}
									span.caret
								ul.dropdown-menu(role='menu')
									li
										a(href='/profile') View Profile
									li
										a(href='/sign-out') Sign out
							else
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
									| Sign in/Sign up
									span.caret
								ul.dropdown-menu(role='menu')
									li
										a(href='/signup') Sign up
									li
										a(href='/signin') Sign in
