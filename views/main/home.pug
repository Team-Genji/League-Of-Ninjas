extends ./_layout

block content
  div#myCarousel.carousel.slide(data-ride='carousel')
    ol.carousel-indicators
      li.active(data-targer='#myCarousel' data-slide-to='0')
      li(data-targer='#myCarousel' data-slide-to='1')
      li(data-targer='#myCarousel' data-slide-to='2')
      li(data-targer='#myCarousel' data-slide-to='3')
    div.carousel-inner(role='listbox')
      div.item.active
        img.img-responsive.center-block(src='static/imgs/first.jpg')
      div.item
        img.img-responsive.center-block(src='static/imgs/second.jpg')
      div.item
        img.img-responsive.center-block(src='static/imgs/third.jpg')
      div.item
        img.img-responsive.center-block(src='static/imgs/fourth.jpg') 
    a.left.carousel-control(href='#myCarousel' role='button' data-slide='prev')
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#myCarousel' role='button' data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only Next
      