extends ../main/_layout

block styles
    link(rel="stylesheet", href="/static/bower_components/toastr/toastr.css")

block headScripts
    script(type='text/javascript', src='./static/js/user-signup.js')
    script(type='text/javascript', src='/static/bower_components/toastr/toastr.js')

block content
    .row
        .col-xs-offset-1.col-xs-10.col-sm-offset-4.col-sm-4
            div.form-group
                label.labelSettings Username
                input.form-control(id="username" type="text" name="username")
            div.form-group
                label.labelSettings Avatar url
                input.form-control(id="avatarUrl" type="text" name="avatarUrl")
            div.form-group
                label.labelSettings Password
                input.form-control(id="password" type="password" name="password")
            button.btn.btn-success.col-xs-6(id="btn-signup" type="submit")
                    | Sign up
            form(action="/" method="get")
                    button.btn.btn-danger.col-xs-6
                        | Cancel