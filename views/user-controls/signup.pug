extends ../main/_layout

block content
    .row
        .col-xs-offset-1.col-xs-10.col-sm-offset-4.col-sm-4
            form(action="/signup" method="post")
                div.form-group
                    label.labelSettings Username
                    input.form-control(type="text" name="username")
                div.form-group
                    label.labelSettings Avatar url
                    input.form-control(type="text" name="avatarUrl")    
                div.form-group
                    label.labelSettings Password
                    input.form-control(type="text" name="password")
                button.btn.btn-success.col-xs-6
                        | Sign up
            form(action="/" method="get")
                    button.btn.btn-danger.col-xs-6
                        | Cancel